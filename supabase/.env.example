# Supabase Local Development Configuration
# Copy this file to .env and fill in your values

# Supabase Project Configuration
SUPABASE_PROJECT_ID=your-project-id
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Storage Configuration
SUPABASE_STORAGE_URL=http://localhost:54321/storage/v1

# Auth Configuration
SUPABASE_AUTH_URL=http://localhost:54321/auth/v1
SUPABASE_JWT_SECRET=your-jwt-secret

# API Configuration
API_EXTERNAL_URL=http://localhost:54321

# Email Configuration (for local testing)
SMTP_HOST=localhost
SMTP_PORT=54325
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=admin@example.com
SMTP_SENDER_NAME=QuizV1

# App Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3000

# Optional: Enable debug logging
DEBUG=supabase:*
SUPABASE_DEBUG=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365
CLEANUP_INTERVAL_HOURS=24

# Production Configuration (for deployment)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-production-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key